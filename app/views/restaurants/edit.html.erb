<h3>Edit Restaurant: <%= @restaurant.name%></h3>

<form action="/restaurants/<%=@restaurant.id%>/edit" method="post">
  <label>Name</label>
  <input type="hidden" id="hidden" name="_method" value="patch">
    <input type="text" name="restaurant[name]" value="<%= @restaurant.name%>">
  <label>Rating</label>
    <input type="text" name="restaurant[rating]" value="<%= @restaurant.rating%>">
  <label>Address</label>
    <input type="text" name="restaurant[address]" value="<%= @restaurant.address%>">

  <input type="submit" value="Submit">
</form>
